<script type="text/javascript">
$("#conn_param").click(function(){
	$.ajax({
		url:"http://localhost:3000/conn_param",
		type:"get",
		data: {
			num: 246,
			str: "반갑습니다"
		},
		success:function(conn){
			//alert('success');
			$("#success").val(conn);
		},
		error:function(){
			alert('error');
		}
	});
});
</script>
